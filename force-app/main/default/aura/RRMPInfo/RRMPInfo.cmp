<aura:component controller="RRMPInfoController" implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="recordId" type = "String"/>
    <aura:attribute name="scrnMsg"  type = "String"/>
    <aura:attribute name="conType"  type = "String"/>
    
    <!--Display Information-->
    <aura:if isTrue="{!v.recordId != null}">
        <lightning:card title="{!v.scrnMsg}">
            <lightning:recordViewForm recordId="{!v.recordId}" objectApiName="RRMP_Contact_Info__c">
                <div class="slds-box" padding="5px;">
                    <lightning:outputField variant="label-inline" fieldName="Contact_Email__c"/>
                    <lightning:outputField variant="label-inline" fieldName="Contact_Number__c"/>
                    <lightning:outputField variant="label-inline" fieldName="Fax_Number__c"/>
                </div>
            </lightning:recordViewForm>
        </lightning:card>

        <aura:set attribute="else">
            <lightning:card>
                <p style="color:red">Contact information couldn't be retrieved. Please contact system administrator!</p>
            </lightning:card>
        </aura:set>
    </aura:if>
    
</aura:component>
